@model Dictionary<string, string>

@{
    ViewBag.Title = "Log in";
    string email = "Email";
    string password = "Password";
    Model[email] = "";
    Model[password] = "";
}
<h1>Log in</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginRouteForm("LoginPathPost"))
        {
            @Html.AntiForgeryToken()


            @Html.Label(email)
            @Html.TextBox("session[Email]", "", new { type = "email", @class = "form-control" })
                        

            @Html.Label("Password")
            @Html.Password("session[Password]", "", new { @class = "form-control" })

            <div class="checkbox inline">
                @Html.CheckBox("session[RememberMe]", new { id = "session_remember_me" })
                @Html.Label("Remember me on this computer")
            </div>
            <input type = "submit" value = "Log in" class="btn btn-primary" />
        }
        <p>New user? @Html.RouteLink("Sign up now!", "Signup")</p>
    </div>
</div>
