@model Microposts.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset password";
}
<h1>Reset password</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        @using (Html.BeginRouteForm("PasswordReset", new { id = ViewContext.RouteData.Values["id"] }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.Partial("_FormErrorPartial")            

            @Html.HiddenFor(model => model.Code)            

            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

            @Html.LabelFor(m => m.ConfirmPassword, "Confirmation")
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

            <input type="submit" class="btn btn-primary" value="Submit Password" />
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
