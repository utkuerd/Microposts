@model Dictionary<string, string>

@{
    ViewBag.Title = "Forgot password";
}
<h1>Forgot password</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginRouteForm("PasswordResetRoute", new { action = "Create" }))
        {
            @Html.Label("Email")
            @Html.TextBox("password_reset[Email]", "", new { type = "email", @class = "form-control" })
            
            <input type="submit" class="btn btn-primary" />
        }        
    </div>
</div>

